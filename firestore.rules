rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function canAccessHousehold(householdId) {
      // Permitir acceso si el usuario es miembro del household
      // Verificamos si existe un documento de usuario con el householdId correcto
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.householdId == householdId;
    }

    function canAccessResource(data) {
      // Permitir acceso por userId (compatibilidad hacia atrás) O por householdId
      return isAuthenticated() && (
        data.userId == request.auth.uid ||
        canAccessHousehold(data.householdId)
      );
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Cards collection
    match /cards/{cardId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Services collection
    match /services/{serviceId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Service Lines collection (líneas/contratos de servicios)
    match /service_lines/{lineId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Scheduled Payments collection
    match /scheduled_payments/{paymentId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Payment History collection
    match /payment_history/{historyId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Recurring expenses collection (DEPRECATED)
    match /recurring_expenses/{expenseId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Payments collection (DEPRECATED)
    match /payments/{paymentId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Banks collection
    match /banks/{bankId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Payment Instances collection
    match /payment_instances/{instanceId} {
      allow read: if canAccessResource(resource.data);
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        canAccessHousehold(request.resource.data.householdId)
      );
      allow update, delete: if canAccessResource(resource.data);
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
